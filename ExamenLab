int Vriesgo (int sueldo,int H, int m, int h)
{
	int sueldo, H,h,m,p;
	int alto,bajo, medio;

	sueldo=sueldo*1;
	alto=1;
	medio=2;
	bajo=3;
	
	if
		(H==1);
		(m==1);
		((p*0.30)>sueldo);
		cout<<"el nivel de riesgo es categoria: "<<"riesgo"<<alto;

	if 
		(H==0);
		((p*0.20)<sueldo);
			cout<<"el nivel de riesgo es categoria: "<<"riesgo"<<medio;
			if
				(H==1);
				(m==0);
				((p*0.30)<sueldo);
				cout<<"el nivel de riesgo es categoria: "<<medio;
}
